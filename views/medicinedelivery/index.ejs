<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MyMed Online Pharmacy</title>
    <link rel="stylesheet" href="/medicinedelivery/style.css">
</head>
<body>
    <header>
        <div class="logo">MyMed Store</div>
        <nav>
            <ul>
                <li><a href="/">Home</a></li>
                <li><a href="/medicinedelivery/cart">View Cart</a></li>  
                <li><a href="/login">Login</a></li>
            </ul>
        </nav>
    </header>

    <main>
        <section class="search-bar">
            <input type="text" id="search-box" placeholder="Search medicines...">
        </section>

        <section class="product-list" id="product-list">
            <!-- EJS loop to render product list dynamically -->
            <% if (products && products.length > 0) { %>
                <% products.forEach(product => { %>
                    <div class="product-item">
                        <img src="<%= product.image || '/default_image.jpg' %>" alt="<%= product.name || 'No Name' %>">
                        <h3><%= product.name || 'No Name' %></h3>
                        <p>â‚¹<%= product.price ? product.price.toFixed(2) : '0.00' %></p>
                        <button onclick="addToCart('<%= product.id %>')">Add to Cart</button>
                    </div>
                <% }) %>
            <% } else { %>
                <p>No products available at the moment.</p>
            <% } %>
        </section>

        <section class="offers">
            <h2>Special Offers</h2>
            <div class="offer-item">20% off on All Vitamins!</div>
            <div class="offer-item">Buy 2 Get 1 Free on Painkillers!</div>
        </section>
    </main>

    <footer>
        <p>&copy; 2024 MyMed Store. All rights reserved.</p>
    </footer>
    <script src="/medicinedelivery/app.js"></script>
</body>
</html>
